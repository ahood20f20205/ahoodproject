<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".login">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="451dp"
        app:boxCornerRadiusBottomStart="35dp"
        app:boxCornerRadiusBottomEnd="35dp"
        app:boxCornerRadiusTopEnd="35dp"
        app:boxCornerRadiusTopStart="35dp"
        android:gravity="center"
        app:boxBackgroundColor="@color/white_transparent"
        app:boxStrokeColor="@color/white_smoke">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/n20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/white"
            android:hint="@string/name"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="362dp"
        android:gravity="center"
        android:hint="@string/password"
        app:boxCornerRadiusBottomStart="35dp"
        app:boxCornerRadiusBottomEnd="35dp"
        app:boxCornerRadiusTopEnd="35dp"
        app:boxCornerRadiusTopStart="35dp"
        android:inputType="number"
        app:boxBackgroundColor="@color/white_transparent"
        app:boxStrokeColor="@color/white_smoke">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/p20"
            android:maxLines="1"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bu20"
        android:layout_width="235dp"
        android:layout_height="70dp"
        app:strokeColor="@color/white_smoke"
        app:strokeWidth="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="193dp"
        android:text="@string/login"
        android:textSize="25sp" />

    <Button
        android:id="@+id/bu220"
        android:layout_width="235dp"
        android:layout_height="70dp"
        app:strokeColor="@color/white_smoke"
        app:strokeWidth="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="97dp"
        android:text="@string/registration"
        android:textSize="25sp" />
</RelativeLayout>