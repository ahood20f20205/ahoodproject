<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Healthcare" parent="Theme.Material3.DynamicColors.Light">
        <!-- Customize your light theme here. -->

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/textColorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorControlActivated</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.Healthcare" parent="Base.Theme.Healthcare" />

    <style name="Theme.Healthcare.NoStatusBar" parent="Theme.Healthcare.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Healthcare.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Healthcare.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Healthcare.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>